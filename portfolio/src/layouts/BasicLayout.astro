---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Section from "../components/Section.astro";
import MovieCard from "../components/MovieCard.astro";
---

<html class="dark">
    <body class="bg-gray-900 text-white">
        <Navbar />
        <Section id="home" title="Welcome to My Portfolio">
            <div class="p-6 rounded-lg text-center">
                <p class="text-lg text-gray-400 mt-4 max-w-2xl mx-auto">
                    I'm a game programmer and 3D artist passionate about
                    creating immersive digital experiences. Explore my projects,
                    renders, and short movies below.
                </p>
                <a
                    href="#projects"
                    class="mt-6 px-6 py-2 bg-blue-500 rounded-lg text-white font-semibold hover:bg-blue-400 transition"
                    >View My Work</a
                >
            </div>
        </Section>
        <Section id="projects" title="Projects">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <div class="bg-gray-800 p-4 rounded-lg shadow-lg">
                    Placeholder for project
                </div>
                <div class="bg-gray-800 p-4 rounded-lg shadow-lg">
                    Placeholder for project
                </div>
                <div class="bg-gray-800 p-4 rounded-lg shadow-lg">
                    Placeholder for project
                </div>
            </div>
        </Section>
        <Section id="renders" title="3D Renders">
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                <div class="bg-gray-800 p-4 rounded-lg shadow-lg">
                    Placeholder for 3D Render
                </div>
                <div class="bg-gray-800 p-4 rounded-lg shadow-lg">
                    Placeholder for 3D Render
                </div>
                <div class="bg-gray-800 p-4 rounded-lg shadow-lg">
                    Placeholder for 3D Render
                </div>
            </div>
        </Section>
        <Section id="movies" title="Short Movies">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <MovieCard
                    title="Movie Title"
                    description="Short description of the movie."
                    releaseDate="YYYY-MM-DD"
                    role="Your Occupation"
                    imageUrl="https://picsum.photos/seed/picsum/1600/900"
                    youtubeUrl="#"
                />
                <MovieCard
                    title="Movie Title"
                    description="Short description of the movie."
                    releaseDate="YYYY-MM-DD"
                    role="Your Occupation"
                    imageUrl="https://via.placeholder.com/300"
                    youtubeUrl="#"
                />
            </div>
        </Section>
        <Section id="contact" title="Contact">
            <p class="text-center">
                Find me on <a href="#" class="text-blue-400 hover:underline"
                    >GitHub</a
                > and <a href="#" class="text-blue-400 hover:underline"
                    >LinkedIn</a
                >
            </p>
        </Section>
    </body>
</html>
